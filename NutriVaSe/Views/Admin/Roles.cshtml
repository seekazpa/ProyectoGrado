@model IEnumerable<NutriVaSe.Models.RoleDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Administrar Roles";
    ViewBag.SubTitle = "Lista de Roles";
}




<div class="">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small>

                        <a href="@Url.Action("Index", "Admin")" class="btn btn-default">
                            <i class="fa fa-reply"></i>
                            Volver a Usuarios
                        </a>
                        <a href="@Url.Action("NuevoRol", "Admin")" class="btn btn-default">
                            <i class="fa fa-plus-circle"></i>
                            Nuevo Rol
                        </a>
                    </h2>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable-responsive" class="table table-striped table-hover table-condensed" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        Roles
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RoleName)
                                        </td>
                                        <td>
                                            @if (item.RoleName.ToLower() != "administrator")
                                            {
                                                @Html.ActionLink("Delete", "DeleteUserRole", new { RoleName = item.RoleName }, new {  onclick =  "return confirm('Are you sure you wish to delete this role?');"})
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
