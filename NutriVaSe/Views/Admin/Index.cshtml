@model PagedList.IPagedList<NutriVaSe.Models.ExpandedUserDTO>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Administrar Usuarios";
    ViewBag.SubTitle = "Lista de Usuarios";
}

    <div class="row">
         <div class="col-lg-12">
              <h1 class="page-header">NutriVase</h1>
         </div>
         <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>@ViewBag.Title <small>@ViewBag.SubTitle</small>

                        <a href="@Url.Action("Create", "Admin")" class="btn btn-default">
                            <i class="fa fa-plus-circle"></i>
                            Nuevo Usuario
                        </a>
                        <a href="@Url.Action("NuevoRol", "Admin")" class="btn btn-default">
                            <i class="fa fa-plus-circle"></i>
                            Nuevo Rol
                        </a>
                        <a href="@Url.Action("Roles", "Admin")" class="btn btn-default">
                            <i class="fa fa-shield"></i>
                            Ver Roles
                        </a>
                    </h2>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-condensed table-hover" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        Nombre y Apellido
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Nombre de Usuario
                                    </th>
                                    <th>
                                        Telefono
                                    </th>
                                    <th>
                                    </th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                                        </td>
                                        <td class="col-lg-2">
                                            <a class="btn btn-warning" href="@Url.Action("EditUser", "Admin", new { UserName = item.UserName })" data-toggle="tooltip" data-placement="top" title="Editar"><em class="glyphicon glyphicon-pencil"></em> Editar</a>
                                            <a class="btn btn-danger" onclick="return confirm('Are you sure you wish to delete this user?');" href="@Url.Action("DeleteUser", "Admin", new { UserName = item.UserName})" data-toggle="tooltip" data-placement="top" title="Borrar"><em class="glyphicon glyphicon-trash"></em> Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>